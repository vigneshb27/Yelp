<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>
<div class="container">
    <h1>All Gyms</h1>
    <div>
        <a href="/gyms/new">Add Gym</a>
    </div>
        <% for(let gym of gyms){ %>
            <div class="card mb-3" >
            <div class="row">
                    <div class="col-md-4">
                        <% if (gym.images.length) { %>
                            <img class="img-fluid" alt="" src="<%=gym.images[0].url%>">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= gym.title %>
                            </h5>
                            <p class="card-text">
                                <%= gym.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= gym.location%>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="/gyms/<%=gym._id%>">View
                                <%=gym.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const gyms = { features: <%- JSON.stringify(gyms) %>}
        </script>
        
        <script src="/javascripts/clusterMap/gym.js"></script> 