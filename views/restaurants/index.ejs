<% layout('layouts/boilerplate')%>

<div id="cluster-map"></div>
<div class="container">
    <br>
    <div>
        <a href="/restaurants/new"><button class="btn btn-dark btn-md float-right">Add Restaurant</button></a>
    </div>
    <br><br>
        <% for(let restaurant of restaurants){ %>
            <div class="card mb-3" >
            <div class="row">
                    <div class="col-md-4">
                        <% if (restaurant.images.length) { %>
                            <img class="img-fluid" alt="" src="<%=restaurant.images[0].url%>">
                        <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= restaurant.title %>
                            </h5>
                            <p class="card-text">
                                <%= restaurant.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= restaurant.location%>
                                </small>
                            </p>
                            <a class="btn btn-dark" href="/restaurants/<%=restaurant._id%>">View
                                <%=restaurant.title%></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            const restaurants = { features: <%- JSON.stringify(restaurants) %>}
        </script>
        
        <script src="/javascripts/clusterMap/restaurant.js"></script> 